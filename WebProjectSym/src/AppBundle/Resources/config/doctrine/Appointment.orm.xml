<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Appointment" table="Appointment">
    <indexes>
      <index name="patient" columns="patient"/>
      <index name="doctor" columns="doctor"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="date" type="date" column="date" nullable="true"/>
    <field name="startHour" type="time" column="start_hour" nullable="true"/>
    <field name="symptoms" type="string" column="symptoms" length="10000" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="block" type="boolean" column="block" nullable="true"/>
    <many-to-one field="doctor" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="doctor" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="patient" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="patient" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
