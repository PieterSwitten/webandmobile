{% extends 'base.html.twig' %}
{% block title %}homepage{% endblock %}
{% block body %}


    <div class="jumbotron">
        <div class="text-center">
            <h1>Welkom!</h1>
        </div>
    </div>
    <div>
        <h1>Login</h1>
        <p>Ingelogd als
            {% if is_granted('ROLE_USER') %}
                {{ app.User.Username  }}
            {% else  %}
                {{ app.user }}
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                (ADMIN)
            {% elseif is_granted('ROLE_ARTS') %}
                (Arts)
            {% elseif is_granted('ROLE_USER') %}
                (USER)
            {% else %}
                (Annoniem)
            {% endif %}
        </p>
        <div>
            <a href={{ path("quitroute") }}> quit</a>
            <a href={{ path("userroute") }}> user</a>
            <a href={{ path("adminroute") }}> admin</a>
            <a href={{ path("registerroute") }}> register</a>
        </div>
    </div>

{% endblock %}